.container
  - if @tag.present?
    = link_to "#{@tag} x", posts_url, class: 'badge badge-tag mb-4'
    
  - @posts.each do |post|
    .row.mb-1
      -#.col-auto
      -#  %span.text-muted
      -#    - published_at = post.published_at || Time.zone.now
      -#    = published_at.in_time_zone("Eastern Time (US & Canada)").strftime("%b %d, %Y") 
      .col-auto
        = link_to post.title, post_url(post)
        %small.text-muted
          - published_at = post.published_at || Time.zone.now
          = " - #{published_at.in_time_zone("Eastern Time (US & Canada)").strftime("%b %d, %Y")}"
      .col.d-none.d-sm-block
        - if post.tags.any?
          - post.tags.each do |tag|
            = link_to tag.name, posts_url(tag: tag.name), class: 'badge badge-tag'
